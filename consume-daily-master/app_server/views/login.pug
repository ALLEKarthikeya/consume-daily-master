extends layout

block content
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title Login
        .panel-body
          form(action='/login', method='POST')
            .form-group
              label(for='username') Username
              input#username.form-control(type='text', name='username', placeholder='Username', required)
            .form-group
              label(for='email') Email
              input#email.form-control(type='email', name='email', placeholder='Email', required)
            .form-group
              label(for='password') Password
              input#password.form-control(type='password', name='password', placeholder='Password', required)
            button.btn.btn-primary(type='submit') Login


